@model Company

<h2>Company Details</h2>

<table class="table table-striped table-hover" width="200" border="1">
    <thead class="thead-dark">
        <tr>
            <th scope="col" width="23">ID</th>
            <th scope="col">Company Name</th>
            <th width="40"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Name</td> 
            <td>@Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })</td>
        </tr>
    </tbody>
</table>