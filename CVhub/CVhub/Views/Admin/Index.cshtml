@model IEnumerable<Company>

@{
    ViewData["Title"] = "Companies";
}

<h2>Companies</h2>

<table class="table table-striped table-hover" width="200" border="1" >
    <thead class="thead-dark">
        <tr>
            <th scope="col" width="23">ID</th>
            <th scope="col">Company Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model.OrderBy(o => o.Id))
        {
        <tr>
            <td>@company.Id</td>
            <td>@Html.ActionLink(company.Name, "Details", new { id = company.Id })</td>
        </tr>
        }
    </tbody>
</table>



