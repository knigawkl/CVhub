@model IEnumerable<JobOffer>

@{ ViewBag.Title = "Job Offers";}

<div class="container">
    <br /> <br />
    <b>Search by: </b>
    <select id="searchBy">
        <option value="Job Title">Job Title</option>
        <option value="Company">Company</option>
        <option value="Location">Location</option>
    </select>
    @Html.TextBox("search")<input type="submit" id="searchBtn" value="search" />
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Job Title</th>
                <th scope="col">Company</th>
                <th scope="col">Location</th>
                <th scope="col">Created</th>
            </tr>
        </thead>
        <tbody id="dataSearching">
            @foreach (var offer in Model.OrderBy(o => o.Created))
            {
                <tr>
                    <td>@Html.ActionLink(offer.JobTitle, "Details", new { id = offer.Id })</td>
                    <td>@offer.CompanyName</td>
                    <td>@offer.Location</td>
                    <td>@offer.Created</td>
                </tr>
            }
        </tbody>
    </table>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#search").keyup(function () {
                var searchBy = $("#searchBy").val();
                var searchValue = $("#search").val();
                var setData = $("#dataSearching");
                setData.html("");
                $.ajax({
                    type: "post",
                    url: "/JobOffer/GetSearch?searchBy=" + searchBy + "&searchValue=" + searchValue,
                    contentType: "html",
                    success: function (result) {
                        if (result.length == 0) {
                            setData.append('<tr style="color:red"><td colspan="3">No matching data found</td></tr>')
                        }
                        else {
                            $.each(result, function (index, value) {
                                var data = "<tr>" +
                                    "<td>" + value.JobTitle + "</td>" +
                                    "<td>" + value.CompanyName + "</td>" +
                                    "<td>" + value.Location + "</td>" +
                                    "<td>" + value.Created + "</td>" +
                                    "</tr>";
                                setData.append(data);
                            });
                        }
                    }
                });
            });
        });
    </script>
    @Html.ActionLink("Create job offer", "Create", "JobOffer", null, new { @class = "btn btn-primary" })
</div>
